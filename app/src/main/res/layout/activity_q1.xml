<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jchuah.mazegame.q1"
    android:id="@+id/Q1">

    <TextView android:text="question onnnnnnnnnnneeeeeeeeeeeee" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/q1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="what does a kangaroo give you?"
        android:id="@+id/textView"
        android:layout_below="@+id/q1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="meat!!!!"
        android:id="@+id/meat"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onButonClick2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" JOKE"
        android:id="@+id/joke"
        android:layout_below="@+id/tl"
        android:layout_centerHorizontal="true"
        android:onClick="onButonClick2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tl"
        android:text="title loans"
        android:layout_alignBaseline="@+id/meat"
        android:layout_alignBottom="@+id/meat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onButonClickQ1" />

</RelativeLayout>
