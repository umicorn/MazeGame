<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jchuah.mazegame.Q4"
    android:id="@+id/Q4">

    <TextView android:text="whos fatter?" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Q4thing"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Sun"
        android:id="@+id/sun"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yo mama!"
        android:id="@+id/mama"
        android:layout_alignTop="@+id/sun"
        android:layout_alignLeft="@+id/Q4thing"
        android:layout_alignStart="@+id/Q4thing" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donald Trump"
        android:id="@+id/DT"
        android:layout_alignTop="@+id/mama"
        android:layout_toRightOf="@+id/Q4thing"
        android:layout_toEndOf="@+id/Q4thing" />

</RelativeLayout>
